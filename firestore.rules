rules_version = '2';
// Updated to allow coach role documents with teamScopes
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function rolesDocExists(uid) {
      return exists(/databases/$(database)/documents/roles/$(uid));
    }

    function rolesDoc(uid) {
      return get(/databases/$(database)/documents/roles/$(uid));
    }

    function docHasRole(doc, role) {
      return (doc.data.roles is list && doc.data.roles.hasAny([role]))
        || (doc.data.role is string && doc.data.role == role);
    }

    function hasRole(uid, role) {
      return rolesDocExists(uid) && docHasRole(rolesDoc(uid), role);
    }

    function isCoach() {
      return isSignedIn() && hasRole(request.auth.uid, "coach");
    }

    function isAdmin() {
      return isSignedIn() && hasRole(request.auth.uid, "admin");
    }

    function allowedRoleKeys() {
      return ["roles", "teamScopes", "teamAnchor", "updatedAt", "accessHistory"];
    }

    function hasCoachPayload() {
      return request.resource.data.roles is list
        && request.resource.data.roles.size() == 1
        && request.resource.data.roles.hasOnly(["coach"]);
    }

    function hasAdminPayload() {
      return request.resource.data.roles is list
        && request.resource.data.roles.size() == 2
        && request.resource.data.roles.hasOnly(["admin", "coach"])
        && request.resource.data.roles.hasAll(["admin", "coach"]);
    }

    function optionalTeamScopesAreList() {
      return request.resource.data.keys().hasAny(["teamScopes"])
        ? request.resource.data.teamScopes is list
        : true;
    }

    function optionalAccessHistoryIsMap() {
      return request.resource.data.keys().hasAny(["accessHistory"])
        ? request.resource.data.accessHistory is map
        : true;
    }

    function isCoachRoleDoc(uid) {
      return rolesDocExists(uid) && docHasRole(rolesDoc(uid), "coach");
    }

    function coachSelfWrite(uid) {
      return isSelf(uid)
        && request.resource.data.keys().hasOnly(allowedRoleKeys())
        && optionalTeamScopesAreList()
        && optionalAccessHistoryIsMap()
        && (hasCoachPayload() || hasAdminPayload());
    }

    function adminBootstrap(uid) {
      return isSelf(uid)
        && request.resource.data.keys().hasOnly(allowedRoleKeys())
        && optionalTeamScopesAreList()
        && optionalAccessHistoryIsMap()
        && hasAdminPayload();
    }

    function defaultTeamScopes() {
      return ["football-varsity", "football-junior-high"];
    }

    function coachTeamScopes(uid) {
      return rolesDocExists(uid) 
        ? (rolesDoc(uid).data.teamScopes is list && rolesDoc(uid).data.teamScopes.size() > 0)
          ? rolesDoc(uid).data.teamScopes
          : defaultTeamScopes()
        : defaultTeamScopes();
    }

    function hasTeamScope(uid, teamId) {
      return !isSignedIn() ? false :
             !teamId || teamId == "" ? true :
             isAdmin() ? true :
             !hasRole(uid, "coach") ? false :
             coachTeamScopes(uid).hasAny([teamId]);
    }

    match /roles/{uid} {
      allow read: if isSignedIn() && (isSelf(uid) || isCoach() || isAdmin());
      allow create, update: if isSelf(uid) || isAdmin();
      allow delete: if isAdmin();
    }

    match /athleteCodes/{code} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn()
        && request.resource.data.keys().hasOnly(["uid", "updatedAt"])
        && (
          request.resource.data.uid == request.auth.uid
          || isCoach()
          || isAdmin()
        );
      allow delete: if isAdmin()
        || (isSignedIn() && resource.data.uid == request.auth.uid)
        || isCoach();
    }

    match /athletes/{uid}/profile/{doc} {
      allow read: if isSignedIn() && (request.auth.uid == uid || isCoach() || isAdmin());
      allow create, update: if isSignedIn() && (
        request.auth.uid == uid ||
        isCoach() ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (request.auth.uid == uid || isAdmin());
    }

    match /{path=**}/profile/{doc} {
      allow read: if isCoach() || isAdmin();
    }

    match /athletes/{uid}/sessions/{sid} {
      allow read, write: if isSignedIn() && (request.auth.uid == uid || isCoach() || isAdmin());
    }

    match /attendance/{team} {
      allow read: if isCoach() || isAdmin();
      allow create, update: if isCoach() || isAdmin();
      allow delete: if isAdmin();
    }
  }
}
